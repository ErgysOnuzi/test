# La Cantina Berlin - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database"
PGHOST="localhost"
PGPORT="5432"
PGUSER="username"
PGPASSWORD="password"
PGDATABASE="database_name"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-here"
ADMIN_PASSWORD_HASH="your-hashed-admin-password"

# External APIs
GOOGLE_REVIEWS_API_KEY="your-google-places-api-key"
GOOGLE_REVIEWS_PLACE_ID="your-google-place-id"

# Site Configuration
NEXTAUTH_URL="http://localhost:5000"
NEXT_PUBLIC_SITE_URL="http://localhost:5000"
SITE_NAME="La Cantina Berlin"

# Email Configuration (via Replit Mail)
MAIL_FROM="noreply@lacantina-berlin.com"

# File Upload Settings
MAX_FILE_SIZE="5242880"  # 5MB in bytes
UPLOAD_DIR="./public/uploads"

# Performance & Analytics
NEXT_TELEMETRY_DISABLED="1"

# Development Settings
NODE_ENV="development"