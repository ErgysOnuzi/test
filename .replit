# La Cantina Berlin - Next.js Restaurant Website Configuration
modules = ["nodejs-20", "web", "postgresql-16"]

[agent]
expertMode = true
integrations = ["javascript_database:1.0.0", "replitmail:1.0.0", "javascript_object_storage:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["python3", "gnumake", "gcc", "pkg-config", "sqlite", "openssl", "imagemagick"]

# Environment Variables
[env]
NODE_ENV = "development"
NEXT_TELEMETRY_DISABLED = "1"

# Development Server Configuration
[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Server"
author = "agent"
description = "La Cantina Berlin Next.js Development Server"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd la-cantina-berlin && npm run dev -- --port 5000 --hostname 0.0.0.0"
waitForPort = 5000

[[workflows.workflow]]
name = "Server"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- --port 5000 --hostname 0.0.0.0"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 40757
externalPort = 3000

# Deployment Configuration
[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
run = ["npm", "start"]

[deployment.env]
NODE_ENV = "production"
NEXT_TELEMETRY_DISABLED = "1"

# Language Server Protocol Settings
[languages.typescript]
pattern = "**/{*.ts,*.tsx,*.js,*.jsx}"
syntax = "typescript"
[languages.typescript.languageServer]
start = ["typescript-language-server", "--stdio"]

[languages.javascript]
pattern = "**/{*.js,*.jsx}"
syntax = "javascript"
[languages.javascript.languageServer]
start = ["typescript-language-server", "--stdio"]
