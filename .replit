modules = ["nodejs-20", "web", "postgresql-16", "python-3.11"]

[agent]
expertMode = true
integrations = ["javascript_database:1.0.0", "replitmail:1.0.0", "javascript_object_storage:1.0.0", "javascript_log_in_with_replit:1.0.0", "github:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["gcc", "gnumake", "imagemagick", "openssl", "pkg-config", "python3", "sqlite"]

# Environment Variables
[env]
NODE_ENV = "development"
NEXT_TELEMETRY_DISABLED = "1"

# Development Server Configuration
[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Restaurant Website"

[[workflows.workflow]]
name = "Restaurant Website"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 35423
externalPort = 8000

[[ports]]
localPort = 35821
externalPort = 3003

[[ports]]
localPort = 39245
externalPort = 3002

[[ports]]
localPort = 40595
externalPort = 5173

[[ports]]
localPort = 41109
externalPort = 5000

[[ports]]
localPort = 41989
externalPort = 3000

[[ports]]
localPort = 43911
externalPort = 4200

[[ports]]
localPort = 44639
externalPort = 6800

# Deployment Configuration
[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
run = ["npm", "start"]

[deployment.env]
NODE_ENV = "production"
NEXT_TELEMETRY_DISABLED = "1"

# Language Server Protocol Settings
[languages.typescript]
pattern = "**/{*.ts,*.tsx,*.js,*.jsx}"
syntax = "typescript"
[languages.typescript.languageServer]
start = ["typescript-language-server", "--stdio"]

[languages.javascript]
pattern = "**/{*.js,*.jsx}"
syntax = "javascript"
[languages.javascript.languageServer]
start = ["typescript-language-server", "--stdio"]
