modules = ["nodejs-20", "web", "postgresql-16", "python-3.11"]

[agent]
expertMode = true
integrations = [
  "javascript_database:1.0.0",
  "replitmail:1.0.0",
  "javascript_object_storage:1.0.0",
]

[nix]
channel = "stable-25_05"
packages = [
  "python3",
  "gnumake",
  "gcc",
  "pkg-config",
  "sqlite",
  "openssl",
  "imagemagick",
]

# Environment Variables
[env]
NODE_ENV = "development"
NEXT_TELEMETRY_DISABLED = "1"

# Development Server Configuration
[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "La Cantina Website"

[[workflows.workflow]]
name = "La Cantina Website"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

# Deployment Configuration
[deployment]
deploymentTarget = "vm"
build = ["npm", "run", "build"]
run = ["npm", "start"]


[deployment.env]
NODE_ENV = "production"
NEXT_TELEMETRY_DISABLED = "1"

# Language Server Protocol Settings
[languages.typescript]
pattern = "**/{*.ts,*.tsx,*.js,*.jsx}"
syntax = "typescript"
[languages.typescript.languageServer]
start = ["typescript-language-server", "--stdio"]

[languages.javascript]
pattern = "**/{*.js,*.jsx}"
syntax = "javascript"
[languages.javascript.languageServer]
start = ["typescript-language-server", "--stdio"]
